<form id="login-form" class="form-signin">
    <h1 class="mb-3 font-weight-normal text-center">Sign-In</h1>
    <input type="text" id="email-input-login" class="form-control" placeholder="Email address" required autofocus>
    <input type="password" id="password-input-login" class="form-control" placeholder="Password" required>
    <button type="submit" id="login-btn" class="btn-login">Login</button>
    <p>Don't have an account? <a type="button" href="/signup" class="mb-3">Sign up</a></p>
</form>


