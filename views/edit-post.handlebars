<article>
  <h2 class="">Edit post</h2>
  <hr>
  <form id="edit-post-form" class="card-body">
    <div>
      <label for="post-subject" class="label">Subject:</label>
      <input class="input" name="post-subject" type="text" value="{{post.subject}}" />
    </div>
    <div>
      <label for="post-content" class="label">Content:</label>
      <input class="textarea" name="post-body" type="text" value="{{post.post_body}}" />
    </div>
    <div class="">
      Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn-save">Save</button>
    <button id="delete-post" type="button" class="btn-del">Delete</button>
  </form>
</article>

<div class="mb3">
  <h2 class="label">Comments</h2>
  <div class="mb-3 mx-10">{{> comments post.comments}}</div>
</div>

<script src=" /javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>